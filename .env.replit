# Environment variables for Replit deployment
# Copy this to your Replit Secrets tab

# Core application settings
REPLIT=1
LOG_LEVEL=INFO
DEBUG=true

# LLM API Keys (Required - Add your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_api_key_here

# Optional: Database configuration
# REPLIT_DB_URL will be automatically set by Replit if you use their database

# Optional: Agent configuration
AGENT_TIMEOUT_SECONDS=300
MAX_AGENT_ATTEMPTS=3
CONFLICT_ESCALATION_THRESHOLD=0.6

# Optional: Performance settings
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300
MAX_LOG_FILE_SIZE=100MB