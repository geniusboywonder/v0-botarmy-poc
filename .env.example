# BotArmy Environment Configuration

# =============================================================================
# LLM API Keys (Required)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_api_key_here

# =============================================================================
# Backend Configuration  
# =============================================================================
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000
DEBUG=true
LOG_LEVEL=INFO
REPLIT=0

# =============================================================================
# WebSocket Configuration
# =============================================================================
WEBSOCKET_URL=ws://localhost:8000/ws
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# =============================================================================
# Frontend Configuration (for Next.js)
# =============================================================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000/ws

# =============================================================================
# Human-in-the-Loop (HITL) Configuration
# =============================================================================
ENABLE_HITL=true
AUTO_ACTION=none
# Options for AUTO_ACTION:
# - none: Manual approval required
# - approve: Auto-approve all agents (testing mode)
# - deny: Auto-deny all agents (testing mode)

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# OpenAI Rate Limits
OPENAI_REQUESTS_PER_MINUTE=60
OPENAI_REQUESTS_PER_HOUR=1000
OPENAI_TOKENS_PER_MINUTE=90000
OPENAI_TOKENS_PER_HOUR=200000

# Anthropic Rate Limits
ANTHROPIC_REQUESTS_PER_MINUTE=50
ANTHROPIC_REQUESTS_PER_HOUR=1000
ANTHROPIC_TOKENS_PER_MINUTE=100000
ANTHROPIC_TOKENS_PER_HOUR=300000

# Google AI Rate Limits
GOOGLE_REQUESTS_PER_MINUTE=100
GOOGLE_REQUESTS_PER_HOUR=2000
GOOGLE_TOKENS_PER_MINUTE=120000
GOOGLE_TOKENS_PER_HOUR=500000

# =============================================================================
# Agent Configuration
# =============================================================================
MAX_AGENTS=6
AGENT_TIMEOUT_SECONDS=300
MAX_AGENT_ATTEMPTS=3
CONFLICT_ESCALATION_THRESHOLD=0.6

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_LOG_FILE_SIZE=100MB
LOG_RETENTION_DAYS=30
ARTIFACTS_COMPRESSION=gzip

# =============================================================================
# ControlFlow Configuration (Development)
# =============================================================================
PREFECT_API_URL=http://localhost:4200/api
PREFECT_UI_URL=http://localhost:4200

# =============================================================================
# Replit-Specific (Auto-set by Replit)
# =============================================================================
# PORT=8000  # Auto-set by Replit
# REPLIT_DB_URL=  # Auto-set by Replit if using database