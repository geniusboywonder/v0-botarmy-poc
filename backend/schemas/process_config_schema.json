{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BotArmy Process Configuration Schema",
  "description": "Schema for validating BotArmy YAML process configuration files",
  "type": "object",
  "required": ["process_name", "description", "version", "roles", "artifacts", "stages"],
  "properties": {
    "process_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable name for the process"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000,
      "description": "Detailed description of the process"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "roles": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["name", "description", "stage_involvement"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Za-z][A-Za-z0-9_\\-\\s]*$",
            "minLength": 1,
            "maxLength": 50,
            "description": "Role name (alphanumeric, spaces, hyphens, underscores)"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2000,
            "description": "Detailed role description and instructions"
          },
          "stage_involvement": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^[A-Za-z][A-Za-z0-9_]*$",
              "description": "Stage names this role participates in"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "type": "object",
        "required": ["name", "description", "type", "path_template"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Artifact name"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500,
            "description": "Artifact description"
          },
          "type": {
            "type": "string",
            "enum": ["document", "code", "config", "data", "image", "binary"],
            "description": "Artifact type"
          },
          "path_template": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_\\-/\\.]+\\.[a-zA-Z0-9]+$",
            "minLength": 1,
            "maxLength": 200,
            "description": "Safe path template (no .. or absolute paths)"
          }
        },
        "additionalProperties": false
      }
    },
    "stages": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 20,
      "patternProperties": {
        "^[A-Za-z][A-Za-z0-9_]*$": {
          "type": "object",
          "required": ["description", "tasks"],
          "properties": {
            "description": {
              "type": "string",
              "minLength": 1,
              "maxLength": 500,
              "description": "Stage description"
            },
            "tasks": {
              "type": "array",
              "minItems": 1,
              "maxItems": 10,
              "items": {
                "type": "object",
                "required": ["name", "role", "input_artifacts", "output_artifacts"],
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "description": "Task name"
                  },
                  "role": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50,
                    "description": "Role that executes this task"
                  },
                  "input_artifacts": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "description": "Input artifact names"
                  },
                  "output_artifacts": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "description": "Output artifact names"
                  },
                  "depends_on": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "description": "Task dependencies"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "workflow_config": {
      "type": "object",
      "properties": {
        "parallel_execution": {
          "type": "boolean",
          "description": "Whether tasks can execute in parallel"
        },
        "timeout_minutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1440,
          "description": "Maximum workflow execution time in minutes"
        },
        "max_retries": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum retry attempts for failed tasks"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}